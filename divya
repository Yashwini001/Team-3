<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Zomato App</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body { font-family: Arial, sans-serif; background: #f7f7f7; margin: 0; }
    header { background: #4CAF50; color: white; padding: 1rem; text-align: center; }
    .container { max-width: 800px; margin: 2rem auto; background: white; padding: 2rem; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);}
    .food-list { display: flex; flex-wrap: wrap; gap: 1.5rem; }
    .food-item { flex: 1 1 180px; background: #fafafa; border: 1px solid #eee; border-radius: 8px; padding: 1rem; text-align: center; }
    .food-item img { width: 100px; height: 100px; object-fit: cover; border-radius: 50%; }
    .food-item button { margin-top: 0.5rem; background: #4CAF50; color: white; border: none; padding: 0.5rem 1.5rem; border-radius: 4px; cursor: pointer; }
    .food-item button:hover { background: #388E3C; }
    #cart { margin-top: 2rem; border-top: 1px solid #eee; padding-top: 1rem;}
    #cart ul { padding-left: 1rem; }
    #cart li { margin-bottom: 0.5rem; }
    #checkout { margin-top: 1rem; background: #FF9800; color: white; border: none; padding: 0.7rem 1.5rem; border-radius: 4px; cursor: pointer;}
    #checkout:hover { background: #F57C00; }
  </style>
</head>
<body>
  <header>
    <h1>Zomato</h1>
  </header>
  <div class="container">
    <h2>Menu</h2>
    <div class="food-list" id="food-list">
      <!-- Food items will be inserted here -->
    </div>

    <div id="cart">
      <h2>Your Cart</h2>
      <ul id="cart-items">
        <!-- Cart items will appear here -->
      </ul>
      <strong>Total: $<span id="cart-total">0.00</span></strong>
      <br>
      <button id="checkout" onclick="alert('Thank you for your order!')">Checkout</button>
    </div>
  </div>

  <script>
    const foods = [
      { id: 1, name: "Pizza", price: 8.99, img: "https://images.pexels.com/photos/315755/pexels-photo-315755.jpeg?auto=compress&w=100&h=100" },
      { id: 2, name: "Burger", price: 6.99, img: "https://images.pexels.com/photos/1639567/pexels-photo-1639567.jpeg?auto=compress&w=100&h=100" },
      { id: 3, name: "Pasta", price: 7.49, img: "https://images.pexels.com/photos/461382/pexels-photo-461382.jpeg?auto=compress&w=100&h=100" },
      { id: 4, name: "Salad", price: 5.99, img: "https://images.pexels.com/photos/1640777/pexels-photo-1640777.jpeg?auto=compress&w=100&h=100" },
      { id: 5, name: "Sushi", price: 12.99, img: "https://images.pexels.com/photos/357756/pexels-photo-357756.jpeg?auto=compress&w=100&h=100" }
    ];

    const cart = [];

    function renderFoods() {
      const foodList = document.getElementById('food-list');
      foods.forEach(food => {
        const div = document.createElement('div');
        div.className = 'food-item';
        div.innerHTML = `
          <img src="${food.img}" alt="${food.name}">
          <h3>${food.name}</h3>
          <p>$${food.price.toFixed(2)}</p>
          <button onclick="addToCart(${food.id})">Add to Cart</button>
        `;
        foodList.appendChild(div);
      });
    }

    function addToCart(id) {
      const food = foods.find(f => f.id === id);
      const cartItem = cart.find(item => item.id === id);
      if (cartItem) {
        cartItem.qty += 1;
      } else {
        cart.push({ ...food, qty: 1 });
      }
      renderCart();
    }

    function removeFromCart(id) {
      const index = cart.findIndex(item => item.id === id);
      if (index > -1) {
        if (cart[index].qty > 1) {
          cart[index].qty -= 1;
        } else {
          cart.splice(index, 1);
        }
        renderCart();
      }
    }

    function renderCart() {
      const cartItems = document.getElementById('cart-items');
      cartItems.innerHTML = '';
      let total = 0;
      cart.forEach(item => {
        total += item.price * item.qty;
        const li = document.createElement('li');
        li.innerHTML = `
          ${item.name} x${item.qty} - $${(item.price * item.qty).toFixed(2)}
          <button style="background:#f44336; color:white; border:none; border-radius:3px; margin-left:10px;" onclick="removeFromCart(${item.id})">-</button>
        `;
        cartItems.appendChild(li);
      });
      document.getElementById('cart-total').textContent = total.toFixed(2);
    }

    // Make functions globally accessible
    window.addToCart = addToCart;
    window.removeFromCart = removeFromCart;

    renderFoods();
    renderCart();
  </script>
</body>
</html>
